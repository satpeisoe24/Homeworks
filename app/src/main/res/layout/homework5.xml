<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ourteam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Team"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/ourteam"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/card2">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/aunglansang"
            />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/aunglansangid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aung La N Sang"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/card1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/mcgregorid"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card1"
            app:layout_constraintRight_toLeftOf="@+id/card3">

            <ImageView
                android:id="@+id/mcgregor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/mcgregor"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/mcgregorid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mcgregor"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/card2"
            app:layout_constraintLeft_toRightOf="@id/aunglansangid"
            app:layout_constraintRight_toLeftOf="@id/brocklesnarid"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card2"
            app:layout_constraintRight_toRightOf="parent">

            <ImageView
                android:id="@+id/brocklesnar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/brocklesnar"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/brocklesnarid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Borck Lesnar"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/card3"
            app:layout_constraintLeft_toRightOf="@id/mcgregorid"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@id/aunglansangid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/card5"
            >

            <ImageView
                android:id="@+id/miketyson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/miketyson"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@id/mcgregorid"
            app:layout_constraintLeft_toRightOf="@id/card4"
            app:layout_constraintRight_toLeftOf="@id/card6">

            <ImageView
                android:id="@+id/pacquio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pacquio"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/miketysonid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mike Tyson"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/card4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/pacquioid"/>

        <TextView
            android:id="@+id/pacquioid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pacquio"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/card5"
            app:layout_constraintRight_toLeftOf="@id/mayweatherid"
            app:layout_constraintLeft_toRightOf="@id/miketysonid"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@id/brocklesnarid"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card5">

            <ImageView
                android:id="@+id/mayweather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mayweather"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/mayweatherid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fload Mayweather"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/card6"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/pacquioid"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mission"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/const1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/missionabout"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/mission"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#D8D8D8"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/downarrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/bottom"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageView
            android:id="@+id/chatbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/chatbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/button"
            />

        <ImageView
            android:id="@+id/button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/mark_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/chatbox"
            app:layout_constraintRight_toLeftOf="@+id/forward"/>

        <ImageView
            android:id="@+id/forward"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/forward"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/button"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>